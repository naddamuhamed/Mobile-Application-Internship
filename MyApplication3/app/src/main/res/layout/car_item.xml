<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--text view for our course name-->

        <!--text view for our course description-->
        <TextView
            android:id="@+id/idcarname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Car Name"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/idcarmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Car Model"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@id/idcarname"/>
        <TextView
            android:id="@+id/idcarnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Car Number"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@id/idcarmodel"/>
        <TextView
            android:id="@+id/idcarobject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Car Object"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@id/idcarnumber"
            />


    </RelativeLayout>


    <!--text view for our course description-->
</androidx.cardview.widget.CardView>